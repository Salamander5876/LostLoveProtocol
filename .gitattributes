# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Shell scripts (must use LF)
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Cargo files
Cargo.toml text eol=lf
Cargo.lock text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
